<local:BaseWindow
	x:Name="window"
	x:Class="Def_Writer.ProjectPreparation"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Def_Writer"
	d:DataContext="{d:DesignInstance Type=local:BaseFileInfo}"
	mc:Ignorable="d"
	Title="{DynamicResource TitleModPreparation}"
	WindowStartupLocation="CenterOwner"
	Height="500"
	Width="1000"
	Padding="0,0,10,0"
	VerticalAlignment="Top">
	<local:BaseWindow.Resources>
		<local:BooleanVisibilityConverter
			x:Key="BooleanVisibilityConverter" />
	</local:BaseWindow.Resources>

	<Grid
		Margin="10,10,10,10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="2*" />
			<ColumnDefinition
				Width="15" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="15" />
			<ColumnDefinition
				Width="3*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="15" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				Text="{DynamicResource BasicInfo}"
				HorizontalAlignment="Center"
				FontSize="14" />
			<TextBlock
				HorizontalAlignment="Right"
				Grid.Row="1"
				Grid.Column="0"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				Text="{DynamicResource ModVersion}" />
			<TextBox
				x:Name="TextVersion"
				Grid.Row="1"
				Grid.Column="1"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				Text="{Binding Version}"
				VerticalAlignment="Top" />
			<TextBlock
				HorizontalAlignment="Right"
				Grid.Row="2"
				Grid.Column="0"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				Text="{DynamicResource ProjectName}"
				ToolTip="{DynamicResource ProjectNameTip}" />
			<TextBox
				x:Name="TextModName"
				Grid.Row="2"
				Grid.Column="1"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				Text="{Binding ModName}" />
			<TextBlock
				Grid.Row="3"
				Grid.Column="0"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				HorizontalAlignment="Right"
				Text="{DynamicResource Author}" />
			<TextBox
				x:Name="TextAuthor"
				Grid.Row="3"
				Grid.Column="1"
				Margin="0,10,0,0"
				TextWrapping="Wrap"
				Text="{Binding Author}"
				VerticalAlignment="Top" />
			<CheckBox
				x:Name="CheckBoxMP"
				Content="{DynamicResource CheckBoxMP}"
				Grid.Row="4"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Margin="0,10,0,0"
				VerticalAlignment="Top"
				ToolTip="{DynamicResource CheckBoxMPTip}"
				IsChecked="{Binding MPOptional}" />

			<GridSplitter
				Grid.Row="5"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Height="1"
				Margin="0,7,0,7"
				Background="#FF4C4B4B"
				HorizontalContentAlignment="Center"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom" />

			<TextBlock
				HorizontalAlignment="Center"
				Grid.Row="6"
				Grid.ColumnSpan="2"
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				Text="{DynamicResource TitleModIcon}"
				FontSize="16" />
			<TextBlock
				Grid.Row="7"
				Grid.Column="0"
				Margin="0,5,0,0"
				TextWrapping="Wrap"
				VerticalAlignment="Center"
				Text="{DynamicResource IconName}"
				HorizontalAlignment="Right" />
			<Grid
				Grid.Row="7"
				Grid.Column="1"
				Margin="0,5,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBox
					x:Name="TextIconName"
					TextWrapping="Wrap"
					Text="{Binding IconName, UpdateSourceTrigger=PropertyChanged}"
					VerticalAlignment="Center"
					TextChanged="TextFilenameChanged" />

				<Button
					x:Name="ButtonChooseIcon"
					Grid.Column="1"
					Content="{DynamicResource ButtonBrowse}"
					Padding="5,0,5,0"
					Click="ImageButtonClick"
					VerticalAlignment="Top" />
			</Grid>
			<Border
				Grid.Row="8"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Margin="0,5,0,0"
				BorderBrush="Black"
				BorderThickness="1">
				<Image
					x:Name="ImageModIcon"
					VerticalAlignment="Top"
					Stretch="Uniform"
					d:Height="200"
					Source="/Images/IconPlaceholder.png" />
			</Border>
			<Grid
				Grid.Row="9"
				Grid.ColumnSpan="2"
				Margin="0,5,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="10" />
					<ColumnDefinition
						Width="*" />
				</Grid.ColumnDefinitions>
			</Grid>
		</Grid>

		<GridSplitter
			Grid.Row="0"
			Grid.Column="1"
			Width="1"
			Margin="7,0,7,0"
			Background="#FF4C4B4B"
			HorizontalAlignment="Center" />

		<Border
			Grid.Column="2"
			Padding="0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="10" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
				</Grid.RowDefinitions>
				<TextBlock
					Text="{DynamicResource TitleCategory}"
					Grid.Row="0"
					FontSize="14"
					HorizontalAlignment="Center" />
				<TextBlock
					Text="{DynamicResource TextCategoryTip}"
					Grid.Row="2"
					HorizontalAlignment="Left"
					TextWrapping="Wrap" />
				<DataGrid
					x:Name="TableCategory"
					Grid.Row="3"
					HeadersVisibility="None"
					VerticalAlignment="Top"
					d:VerticalAlignment="Stretch"
					Background="#00000000"
					AutoGenerateColumns="False"
					HorizontalContentAlignment="Stretch"
					VerticalContentAlignment="Stretch"
					Margin="0,5,0,0">
					<DataGrid.Columns>
						<DataGridTemplateColumn>
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<CheckBox
										HorizontalAlignment="Center"
										IsChecked="{Binding Check, UpdateSourceTrigger=PropertyChanged}" />
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTextColumn
							IsReadOnly="True"
							Binding="{Binding Category}"
							Width="*" />
					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</Border>


		<GridSplitter
			Grid.Row="0"
			Grid.Column="3"
			Width="1"
			Margin="7,0,7,0"
			Background="#FF4C4B4B"
			HorizontalAlignment="Center" />

		<Grid
			Grid.Column="4">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<TextBlock
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				FontSize="14"
				HorizontalAlignment="Center"
				Text="{DynamicResource TitleDescription}" />
			<Grid
				Grid.Row="1"
				Margin="0,10,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="*" />
				</Grid.ColumnDefinitions>
				<TextBlock
					TextWrapping="Wrap"
					VerticalAlignment="Top"
					HorizontalAlignment="Center"
					Text="{DynamicResource DescriptionFileName}" />
				<TextBox
					x:Name="TextDescriptionName"
					TextWrapping="Wrap"
					VerticalAlignment="Top"
					Grid.Column="1"
					Text="{Binding DescriptionName, UpdateSourceTrigger=PropertyChanged}"
					TextChanged="TextFilenameChanged" />
			</Grid>

			<Grid
				Grid.Row="2"
				Margin="0,5,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="1*" />
					<ColumnDefinition
						Width="2*" />
				</Grid.ColumnDefinitions>
				<DataGrid
					x:Name="TableLocale"
					RowHeaderWidth="0"
					IsReadOnly="True"
					AutoGenerateColumns="false"
					CanUserSortColumns="False"
					GridLinesVisibility="Horizontal"
					d:ItemsSource="{d:SampleData ItemCount=2}"
					SelectionMode="Single"
					SelectionChanged="TableLocaleChanged">
					<DataGrid.Columns>
						<DataGridTextColumn
							Header="{DynamicResource HeaderLocale}"
							Width="*"
							Binding="{Binding LocaleValue}">
							<DataGridTextColumn.CellStyle>
								<Style
									TargetType="DataGridCell">
									<Setter
										Property="ToolTip"
										Value="{Binding LocaleDisplay}" />
								</Style>
							</DataGridTextColumn.CellStyle>
						</DataGridTextColumn>
						<DataGridTemplateColumn>
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<Button
										BorderThickness="0"
										Visibility="{Binding Path=HasDesc, Converter={StaticResource BooleanVisibilityConverter},Mode=OneWay}"
										VerticalAlignment="Top"
										Click="DeleteLocaleClick">
										<Image
											Source="/Images/DeleteTranslation.png" />
									</Button>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>
				<Grid
					Grid.Column="1"
						Margin="5,0,0,0">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="*" />
					</Grid.RowDefinitions>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="*" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
							<ColumnDefinition
								Width="Auto" />
						</Grid.ColumnDefinitions>
						<Button
							x:Name="ButtonCopyFromUniversal"
							HorizontalAlignment="Left"
							Click="CopyFromUniversalClick">
							<Image
								Source="/Images/Copy.png"
								Stretch="None" />
							<Button.Style>
								<Style
									TargetType="Button">
									<Style.Triggers>
										<DataTrigger
											Binding="{Binding CurrentDesc}"
											Value="universal">
											<Setter
												Property="Visibility"
												Value="Hidden" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Button.Style>
						</Button>
						<TextBlock
							Text="{DynamicResource TextFontColor}"
							Grid.Column="2"
							VerticalAlignment="Center" />
						<Button
							x:Name="ButtonColorNormal"
							Content="[normal]"
							Grid.Column="3"
							Background="Black"
							ToolTip="{DynamicResource ColorNormal}"
							Width="{Binding ActualHeight, ElementName=ButtonColorNormal, Mode=OneWay}"
							Click="ButtonColorClick"
							Foreground="Transparent" />
						<Button
							x:Name="ButtonColorRed"
							Content="[red]"
							Grid.Column="4"
							Margin="5,0,0,0"
							Background="Red"
							ToolTip="{DynamicResource ColorRed}"
							Width="{Binding ActualHeight, ElementName=ButtonColorRed}"
							Click="ButtonColorClick"
							Foreground="Transparent"  />
						<Button
							x:Name="ButtonColorGreen"
							Content="[green]"
							Grid.Column="5"
							Margin="5,0,0,0"
							Background="Green"
							ToolTip="{DynamicResource ColorGreen}"
							Width="{Binding ActualHeight, ElementName=ButtonColorGreen}"
							Click="ButtonColorClick"
							Foreground="Transparent"  />
						<Button
							x:Name="ButtonColorBlue"
							Content="[blue]"
							Grid.Column="6"
							Margin="5,0,0,0"
							Background="Blue"
							ToolTip="{DynamicResource ColorBlue}"
							Width="{Binding ActualHeight, ElementName=ButtonColorBlue}"
							Click="ButtonColorClick"
							Foreground="Transparent"  />
						<Button
							x:Name="ButtonColorWhite"
							Content="[white]"
							Grid.Column="7"
							Margin="5,0,0,0"
							Background="White"
							ToolTip="{DynamicResource ColorWhite}"
							Width="{Binding ActualHeight, ElementName=ButtonColorWhite}"
							Click="ButtonColorClick"
							Foreground="Transparent"  />
						<Button
							x:Name="ButtonColorOrange"
							Content="[orange]"
							Grid.Column="8"
							Margin="5,0,0,0"
							Background="Orange"
							ToolTip="{DynamicResource ColorOrange}"
							Width="{Binding ActualHeight, ElementName=ButtonColorOrange}"
							Click="ButtonColorClick"
							Foreground="Transparent" />
					</Grid>
					<TextBox
						d:DataContext="{d:DesignInstance Type=local:DescLocale}"
						x:Name="TextDescription"
						Margin="0,5,0,0"
						Grid.Row="1"
						TextWrapping="Wrap"
						Text="{Binding DescContent, UpdateSourceTrigger=PropertyChanged}"
						VerticalScrollBarVisibility="Auto" />
				</Grid>
			</Grid>
		</Grid>

		<StackPanel
			Grid.Row="2"
			Grid.Column="0"
			Grid.ColumnSpan="5"
			Orientation="Horizontal"
			UseLayoutRounding="False"
			FlowDirection="RightToLeft">
			<Button
				x:Name="ButtonCancel"
				Content="{DynamicResource ButtonCancel}"
				HorizontalAlignment="Right"
				FontSize="14"
				Padding="50,5,50,5"
				Margin="0,0,10,0"
				ButtonBase.Click="ButtonResultClick" />
			<Button
				x:Name="ButtonSave"
				Content="{DynamicResource ButtonSave}"
				Padding="50,5,50,5"
				FontSize="14"
				ButtonBase.Click="ButtonResultClick" />
		</StackPanel>
	</Grid>
</local:BaseWindow>
