<base:BaseWindow
	x:Class="SCS_Mod_Helper.Main.NaviMainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:base="clr-namespace:SCS_Mod_Helper.Base"
	xmlns:local="clr-namespace:SCS_Mod_Helper.Main"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	xmlns:aa="clr-namespace:SCS_Mod_Helper.Accessory.AccAddon"
	xmlns:manifest="clr-namespace:SCS_Mod_Helper.Manifest"
	xmlns:localization="clr-namespace:SCS_Mod_Helper.Localization"
	d:DataContext="{d:DesignInstance Type=local:MainWindowBinding}"
	Loaded="NaviMainWindowLoaded"
	mc:Ignorable="d"
	Title="SCS Model Helper"
	Height="700"
	Width="1200"
	ExtendsContentIntoTitleBar="True">
	<Grid
		x:Name="GridMain">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<ui:TitleBar
			Title="SCS Model Helper"
			VerticalAlignment="Top"
			VerticalContentAlignment="Stretch">
			<ui:TitleBar.Icon>
				<ui:ImageIcon
					Source="/Images/AppIcon.png" />
			</ui:TitleBar.Icon>
		</ui:TitleBar>
		<ui:NavigationView
			x:Name="Navigation"
			Grid.Row="1"
			IsBackButtonVisible="Collapsed"
			OpenPaneLength="200">
			<ui:NavigationView.MenuItems>
				<ui:NavigationViewItem
					Content="Home"
					Icon="{ui:SymbolIcon Home16}"
					TargetPageType="{x:Type local:AboutPage}"
					TargetPageTag="MainPage"
					Visibility="Collapsed"/>
				<ui:NavigationViewItem
					Content="{DynamicResource TitleModManifest}"
					Icon="{ui:SymbolIcon DocumentEdit20}"
					TargetPageType="{x:Type manifest:ModManifestPage}"
					TargetPageTag="ModManifest" />
				<ui:NavigationViewItem
					Content="{DynamicResource TitleAccessoryAddon}"
					Icon="{ui:SymbolIcon Chess20}"
					Command="{Binding WindowCommand}"
					CommandParameter="AccessoryAddon" />
				<ui:NavigationViewItem
					Content="{DynamicResource TitleAccessoryHookup}"
					Icon="{ui:SymbolIcon BoardGames20}"
					Command="{Binding WindowCommand}"
					CommandParameter="AccessoryHookup" />
				<ui:NavigationViewItem
					Content="{DynamicResource TitlePhysicsToyData}"
					Icon="{ui:SymbolIcon PersonRunning20}"
					Command="{Binding WindowCommand}"
					CommandParameter="PhysicsToyData"/>
				<ui:NavigationViewItem
					Content="{DynamicResource TitleSetupLocalization}"
					Icon="{ui:SymbolIcon BookOpenGlobe20}"
					Command="{Binding WindowCommand}"
					CommandParameter="ModLocalization"/>
				<ui:NavigationViewItem
					Content="{DynamicResource TitleSetupPaintJob}"
					Icon="{ui:SymbolIcon PaintBrush20}"
					Visibility="Collapsed"
					Command="{Binding WindowCommand}"
					CommandParameter="PaintJob" />
				<ui:NavigationViewItem
					Content="{DynamicResource TitleCreatedSii}"
					Icon="{ui:SymbolIcon Broom20}"
					Command="{Binding WindowCommand}"
					CommandParameter="CreatedSii" />
			</ui:NavigationView.MenuItems>
			<ui:NavigationView.FooterMenuItems>
				<ui:NavigationViewItem
					Content="{DynamicResource TitleAbout}"
					Icon="{ui:SymbolIcon Info28}"
					TargetPageType="{x:Type local:AboutPage}" />
				<ui:NavigationViewItem
					Content="Settings"
					Icon="{ui:SymbolIcon Settings32}"
					TargetPageType="{x:Type local:SettingsPage}" />
			</ui:NavigationView.FooterMenuItems>
		</ui:NavigationView>
	</Grid>
</base:BaseWindow>
