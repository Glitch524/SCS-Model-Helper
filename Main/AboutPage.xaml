<base:BasePage
	x:Class="SCS_Mod_Helper.Main.AboutPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SCS_Mod_Helper.Main"
	xmlns:base="clr-namespace:SCS_Mod_Helper.Base"
	xmlns:util="clr-namespace:SCS_Mod_Helper.Utils"
	d:DataContext="{d:DesignInstance Type=local:AboutBinding}"
	mc:Ignorable="d"
	d:Background="White"
	Title="{DynamicResource TitleAbout}">
	<base:BasePage.Resources>
		<Style
			TargetType="TextBlock"
			BasedOn="{StaticResource {x:Type TextBlock}}">
			<Setter
				Property="TextWrapping"
				Value="Wrap" />
			<Setter
				Property="FontSize"
				Value="14" />
		</Style>
	</base:BasePage.Resources>
	<Grid
		x:Name="GridMain"
		Margin="40">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock>
			<Run
				Text="Github:" />
			<Hyperlink
				NavigateUri="https://github.com/Glitch524/SCS-Model-Helper"
				RequestNavigate="HyperlinkClick">SCS Model Helper</Hyperlink>
			<LineBreak />
			<Run
				Text="{DynamicResource HeaderVersion}" />
			<Run
				Text="{DynamicResource Version}" />
		</TextBlock>
		<StackPanel 
			Grid.Row="1"
			Margin="0,5,0,0">
			<TextBlock>
				<Run
					Text="{DynamicResource HeaderPersonalHomepage}" />
			</TextBlock>
			<TextBlock
				Margin="20,5,0,0">
				<Run
					Text="Bilibili:" />
				<Hyperlink
					NavigateUri="https://space.bilibili.com/1970055"
					RequestNavigate="HyperlinkClick">Glitch524</Hyperlink>
			</TextBlock>
		</StackPanel>
		<StackPanel
			Grid.Row="1"
			Grid.Column="1">
			<TextBlock
				Margin="0,5,0,0"
				Text="{DynamicResource HeaderSupport}" />
			<TextBlock
				x:Name="TextBilibili"
				Margin="20,5,0,0">
				<TextBlock.Style>
					<Style
						TargetType="TextBlock"
						BasedOn="{StaticResource {x:Type TextBlock}}">
						<Style.Triggers>
							<DataTrigger
								Binding="{Binding SponserLocal}"
								Value="False">
								<Setter
									Property="Visibility"
									Value="Collapsed" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</TextBlock.Style>
				<Run
					Text="←如果不介意可以在B站充电" />
			</TextBlock>
			<TextBlock
				x:Name="TextKoFi"
				Margin="20,5,0,0">
				<TextBlock.Style>
					<Style
						TargetType="TextBlock"
						BasedOn="{StaticResource {x:Type TextBlock}}">
						<Style.Triggers>
							<DataTrigger
								Binding="{Binding SponserLocal}"
								Value="True">
								<Setter
									Property="Visibility"
									Value="Collapsed" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</TextBlock.Style>
				<Run
					Text="Ko-Fi:" />
				<Hyperlink
					NavigateUri="https://ko-fi.com/glitch524"
					RequestNavigate="HyperlinkClick">Glitch524</Hyperlink>
			</TextBlock>
		</StackPanel>
		<TextBlock
			Grid.Row="2"
			Grid.ColumnSpan="2"
			Margin="0,10,0,0">
			<Run
				Text="{DynamicResource Desc}" />
		</TextBlock>
    </Grid>
</base:BasePage>
