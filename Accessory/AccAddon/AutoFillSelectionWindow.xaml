<base:BaseWindow
	x:Class="SCS_Mod_Helper.Accessory.AccAddon.AutoFillSelectionWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SCS_Mod_Helper.Accessory.AccAddon"
	xmlns:base="clr-namespace:SCS_Mod_Helper.Base"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	d:DataContext="{d:DesignInstance Type=local:AutoFillBinding}"
	mc:Ignorable="d"
	ExtendsContentIntoTitleBar="True"
	Width="400"
	WindowStartupLocation="CenterOwner"
	SizeToContent="Height"
	Closing="Window_Closing"
	MinWidth="10"
	MinHeight="10">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<ui:TitleBar
			Title="{DynamicResource TitleAutoRecognize}"
			Padding="16,4,16,0" />
		<StackPanel
			x:Name="StackMain"
			Grid.Row="1"
			Margin="10,0,10,10">
			<TextBlock
				TextWrapping="Wrap">
			<Run
					Text="{DynamicResource MessageAR}" />
			</TextBlock>
			<CheckBox
				x:Name="CheckBoxSelectAll"
				Margin="0,10,0,0"
				IsChecked="{Binding SelectAll}"
				Content="{DynamicResource CheckBoxSelectAll}">
				<CheckBox.Style>
					<Style
						TargetType="CheckBox"
						BasedOn="{StaticResource {x:Type CheckBox}}">
						<Style.Triggers>
							<DataTrigger
								Binding="{Binding SelectCount}"
								Value="2">
								<Setter
									Property="Visibility"
									Value="Collapsed" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</CheckBox.Style>
			</CheckBox>
			<CheckBox
				x:Name="CheckBoxModelName"
				Margin="0,5,0,0"
				IsChecked="{Binding CheckModelName}"
				Content="{DynamicResource CheckHeadModelName}"
				Visibility="{Binding VisibleModelName}" />
			<TextBlock
				Margin="20,0,0,0"
				Text="{Binding TextModelName}"
				Visibility="{Binding VisibleModelName}"
				TextWrapping="Wrap" />
			<CheckBox
				x:Name="CheckBoxModelType"
				Margin="0,5,0,0"
				IsChecked="{Binding CheckModelType}"
				Content="{DynamicResource CheckHeadModelType}"
				Visibility="{Binding VisibleModelType}" />
			<TextBlock
				Margin="20,0,0,0"
				Text="{Binding TextModelType}"
				Visibility="{Binding VisibleModelType}"
				TextWrapping="Wrap" />
			<CheckBox
				x:Name="CheckBoxModelPath"
				Margin="0,5,0,0"
				IsChecked="{Binding CheckModelPath}"
				Content="{DynamicResource CheckHeadModelPath}"
				Visibility="{Binding VisibleModelPath}" />
			<TextBlock
				Margin="20,0,0,0"
				Text="{Binding TextModelPath}"
				Visibility="{Binding VisibleModelPath}"
				TextWrapping="Wrap" />
			<CheckBox
				x:Name="CheckBoxModelPathUK"
				Margin="0,5,0,0"
				IsChecked="{Binding CheckModelPathUK}"
				Content="{DynamicResource CheckHeadModelPathUK}"
				Visibility="{Binding VisibleModelPathUK}" />
			<TextBlock
				Margin="20,0,0,0"
				Text="{Binding TextModelPathUK}"
				Visibility="{Binding VisibleModelPathUK}"
				TextWrapping="Wrap" />
			<CheckBox
				x:Name="CheckBoxModelColl"
				Margin="0,5,0,0"
				IsChecked="{Binding CheckCollPath}"
				Content="{DynamicResource CheckHeadCollPath}"
				Visibility="{Binding VisibleCollPath}" />
			<TextBlock
				Margin="20,0,0,0"
				Text="{Binding TextCollPath}"
				Visibility="{Binding VisibleCollPath}"
				TextWrapping="Wrap" />
			<Button
				x:Name="ButtonOK"
				Margin="10,15,10,0"
				Content="{DynamicResource ButtonOK}"
				Click="ResultClick"
				HorizontalAlignment="Stretch" />
		</StackPanel>
	</Grid>
</base:BaseWindow>
