<Window 
	x:Class="SCS_Mod_Helper.Accessory.AccAddon.AccHideInWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:SCS_Mod_Helper.Accessory.AccAddon"
	mc:Ignorable="d" 
	WindowStartupLocation="CenterOwner"
	Width="250"
	Height="Auto"
	SizeToContent="Height"
	Title="{DynamicResource HideIn}">

	<StackPanel
		Margin="10">
		<TextBlock
			Text="{DynamicResource TitleHideIn}"
			TextWrapping="Wrap" />
		<CheckBox
			x:Name="CheckMainView"
			Content="Main View"
			Margin="0,5,0,0"
			Tag="0x7"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckReflectionCube"
			Content="Reflection Cube"
			Margin="0,5,0,0"
			Tag="0x1F8"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckCloseMirror"
			Content="Close Mirror"
			Margin="0,5,0,0"
			Tag="0x600"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckFarMirror"
			Content="Far Mirror"
			Margin="0,5,0,0"
			Tag="0x1800"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckSideMirror"
			Content="Side Mirror"
			Margin="0,5,0,0"
			Tag="0x2000"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckFrontMirror"
			Content="Front Mirror"
			Margin="0,5,0,0"
			Tag="0x4000"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckShadows"
			Content="Shadows"
			Margin="0,5,0,0"
			Tag="0x1FFE0000"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<CheckBox
			x:Name="CheckRainReflection"
			Content="Rain reflection"
			Margin="0,5,0,0"
			Tag="0xE0000000"
			Checked="ViewChecked"
			Unchecked="ViewUnchecked" />
		<Grid
			Margin="0,5,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<TextBlock
				Text="hide_in: "
				VerticalAlignment="Center" />
			<TextBlock
				Grid.Column="1"
				x:Name="TextValueHideIn"
				Margin="0,0,0,0"
				Text="0x0" />
		</Grid>
		<Button
			Margin="0,10,0,0"
			Content="{DynamicResource ButtonOK}"
			Click="ButtonOKClick" />

	</StackPanel>
</Window>
