<base:BaseWindow
	x:Class="SCS_Mod_Helper.Accessory.AccAddon.NewTruckWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:base="clr-namespace:SCS_Mod_Helper.Base"
	xmlns:utils="clr-namespace:SCS_Mod_Helper.Utils"
	mc:Ignorable="d"
	Title="{DynamicResource TitleAddTruck}"
	WindowStartupLocation="CenterOwner"
	Width="500"
	SizeToContent="Height">
	<base:BaseWindow.Resources>
		<utils:MultiNullCheckConverter
			x:Key="MultiNullCheck" />
	</base:BaseWindow.Resources>
	<Grid
		Margin="10,10,10,10">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="10" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			FontSize="16">
			<Run
				Language="zh-cn"
				Text="{DynamicResource TruckID}" />
		</TextBlock>
		<TextBox
			x:Name="TextTruckID"
			Grid.Row="1"
			Grid.Column="0"
			FontSize="14"
			Padding="5,5,5,5"
			TextWrapping="Wrap"
			VerticalAlignment="Top" />
		<TextBlock
			Grid.Row="0"
			Grid.Column="2"
			FontSize="16">
			<Run
				Language="zh-cn"
				Text="{DynamicResource TruckName}" />
		</TextBlock>
		<TextBox
			x:Name="TextIngameName"
			Grid.Row="1"
			Grid.Column="2"
			FontSize="14"
			Padding="5,5,5,5"
			TextWrapping="Wrap"
			VerticalAlignment="Top" />
		<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			Margin="0,10,0,0"
			FontSize="16">
			<Run
				Language="zh-cn"
				Text="{DynamicResource TruckDescription}" />
		</TextBlock>
		<TextBox
			x:Name="TextDescription"
			Grid.Row="3"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			FontSize="14"
			Padding="5,5,5,5"
			TextWrapping="Wrap"
			VerticalAlignment="Top" />
		<Button
			x:Name="ButtonOK"
			Content="{DynamicResource ButtonOK}"
			Margin="0,10,0,0"
			Grid.Row="4"
			Grid.Column="0"
			FontSize="14"
			Click="ButtonClick">
			<Button.IsEnabled>
				<MultiBinding
					Converter="{StaticResource MultiNullCheck}"
					ConverterParameter="AND,Nonull">
					<Binding
						ElementName="TextTruckID"
						Path="Text" />
					<Binding
						ElementName="TextIngameName"
						Path="Text" />
				</MultiBinding>
			</Button.IsEnabled>
		</Button>
		<Button
			x:Name="ButtonCancel"
			Content="{DynamicResource ButtonCancel}"
			Margin="0,10,0,0"
			Grid.Row="4"
			Grid.Column="2"
			FontSize="14"
			Click="ButtonClick" />
	</Grid>
</base:BaseWindow>
