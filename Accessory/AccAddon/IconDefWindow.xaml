<Window
	x:Class="SCS_Mod_Helper.Accessory.AccAddon.IconDefWIndow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SCS_Mod_Helper"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d"
	Title="{DynamicResource TitleCreateIconDefFiles}" 
	Height="Auto" 
	Width="400"
	SizeToContent="WidthAndHeight">
	<StackPanel
		Margin="10,10,10,10">
		<TextBlock
			Grid.Row="0"
			Grid.ColumnSpan="2"
			TextWrapping="Wrap"
			Text="{DynamicResource TextIconNoMatTobj}"
			VerticalAlignment="Top" />
		<CheckBox
			x:Name="BoxCreateOnAccessory"
			Content="{DynamicResource CheckBoxCreateAtAcc}"
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Margin="0,10,0,0"
			VerticalAlignment="Top"
			Visibility="Collapsed"
			d:Visibility="Visible" />
		<TextBlock
			x:Name="TextNotInAcc"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Margin="0,10,0,0"
			TextWrapping="Wrap"
			Text="{DynamicResource TextIconNotInAcc}"
			Visibility="Collapsed"
			d:Visibility="Visible"
			VerticalAlignment="Top" />

		<Grid
			Grid.Row="2"
				Margin="10,10,10,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="10" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Button
				x:Name="ButtonYes"
				Content="{DynamicResource ButtonYes}"
				Grid.Column="0"
				VerticalAlignment="Top"
				Click="Button_Click" />
			<Button
				x:Name="ButtonNo"
				Content="{DynamicResource ButtonNo}"
				Grid.Column="2"
				VerticalAlignment="Top"
				Click="Button_Click" />
		</Grid>



	</StackPanel>
</Window>
